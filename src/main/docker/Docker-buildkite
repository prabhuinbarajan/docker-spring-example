FROM java:7
RUN  apt-get update
RUN   apt-get install software-properties-common python-software-properties
RUN apt-get update
RUN add-apt-repository ppa:pitti/systemd
RUN apt-get update
RUN apt-get install systemd libpam-systemd systemd-ui
RUN mkdir -p /opt/sprockest/
ADD build/distributions/sprokest_*.deb .
#RUN  update-alternatives --install /usr/bin/java java /usr/lib/jvm/java-8-oracle/jre/bin/java 2000
#RUN  update-alternatives --install /usr/bin/javac javac /usr/lib/jvm/java-8-oracle/bin/javac 2000

RUN dpkg -i sprokest_*.deb
RUN service start sprokest 
EXPOSE 8080
